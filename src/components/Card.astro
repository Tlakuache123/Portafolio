---
interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props;
---

<div class="bg-deepgreen-300 rounded-xl p-4 min-h-60 w-full mb-4 shadow-md">
  <div class="flex items-center justify-center">
    <!--Header -->
    <slot name="header" />
  </div>

  <div class="flex flex-col">
    <h2 class="text-2xl text-start font-mono text-deepgreen-200">
      {title}
    </h2>
    <p class="text-left overflow-auto text-deepgreen-100 font-sans mt-2">
      {body}
    </p>
  </div>
</div>
