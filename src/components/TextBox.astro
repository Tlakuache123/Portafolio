---
interface Props {
  title: string;
  body?: string;
}

const { title, body } = Astro.props;
---

<div class="w-full px-1 mb-4">
  <div>
    <!--Header -->
    <slot name="header" />
  </div>

  <div class="flex flex-col gap-2">
    <h2
      class="text-2xl text-start font-mono text-deepgreen-400 dark:text-deepgreen-200"
    >
      {title}
    </h2>
    <p class="text-left">{body}</p>
    <div>
      <slot />
    </div>

    <slot name="footer" />
  </div>
</div>
