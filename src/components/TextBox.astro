---
interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props;
---

<div class="w-full px-1">
  <div class="">
    <!--Header -->
    <slot name="header" />
  </div>

  <div class="flex flex-col divide-y">
    <h2 class="text-2xl text-start font-mono">
      {title}
    </h2>
    <p class="text-left overflow-auto text-neutral-500 font-sans">
      {body}
    </p>
    <slot name="footer"/>
  </div>
</div>
